generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Libro {
  id        Int    @id @default(autoincrement())
  titulo    String
  autor     String
  creadoEn  DateTime @default(now())
}

model Usuario {
  id        Int     @id @default(autoincrement())
  nombre    String
  apellido  String
  correo    String  @unique
  password  String
  creadoEn  DateTime @default(now())
}